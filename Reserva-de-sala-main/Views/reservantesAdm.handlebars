<body>
    <div class="container">


       
        <!-- logo de trás -->
        <div class="mulher">


            <img src="assets/afya_mulher.png" alt="img">


        </div>


        <header>
            <!-- botei o link aqui para criar um redirecionamento ao portal inicial da Afya -->


            <a href="https://www.afya.com.br/"><img src="assets/logo afya cor rosa.png" id="logo"></a>
               
            <!-- cabeçalho -->
            <nav id="menu">
       
                    <a href="/reservasAdm">Salas</a>
                    <a href="#"><span class="reservantes-header">Reservantes</span></a>
                    <a href="#">Cursos</a>
                    <a href="/">Sair</a>
                </nav>        
            </header>

        <h1>Reservas</h1>

        <!-- barra de pesquisa -->
        <form class="search-form">
            <input type="text" name="q" placeholder="Buscar..." class="search-bar">
            <button type="submit" class="search-btn">Pesquisar</button>

             <div class="box-salas">
    <table>
        <thead>
            <tr>
                <th>Vagas</th>
                <th>Responsável</th>
                <th>Sala</th>
                <th>Status</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            {{#each reservas}}
            <tr>
                <td class="vagas">{{this.vagas}}</td>
                <td class="responsavel">{{this.responsavel}}</td>
                <td>{{this.sala}}</td>
                <td>{{this.status}}</td>
                <td>
                    <ion-icon class="edit" name="pencil-outline"></ion-icon>
                    <ion-icon class="edit" name="trash-outline"></ion-icon>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

    </div>
    <footer><p>Todos os direitos reservados. Copyright 2024/ Afya</p></footer>





    
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</body>
